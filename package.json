{
  "name": "blawby-backend",
  "version": "0.3.0",
  "description": "Fastify Typescript Starter",
  "keywords": [
    "fastify",
    "fastify-starter"
  ],
  "license": "MIT",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "pnpm dev:fast",
    "dev:fast": "tsx watch --clear-screen=false --ignore-watch=node_modules --ignore-watch=dist src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "generate:swagger": "tsx -e \"require('./src/swagger.ts').initSwagger(require('fastify')()); console.log('Swagger docs generated at src/generated/swagger.json');\"",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap test/**/*.test.ts",
    "typecheck": "tsc -noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@fastify/autoload": "6.3.0",
    "@fastify/cors": "11.0.1",
    "@fastify/env": "5.0.2",
    "@fastify/etag": "6.0.3",
    "@fastify/helmet": "13.0.1",
    "@fastify/multipart": "9.0.3",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/sensible": "6.0.3",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.2",
    "@hyperdx/node-opentelemetry": "0.8.1",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.59.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "0.201.1",
    "@opentelemetry/exporter-trace-otlp-proto": "0.201.1",
    "@opentelemetry/sdk-metrics": "2.0.1",
    "@opentelemetry/sdk-node": "0.201.1",
    "@sinclair/typebox": "0.34.33",
    "better-auth": "1.3.25",
    "close-with-grace": "2.2.0",
    "drizzle-orm": "0.36.4",
    "drizzle-zod": "0.5.1",
    "fastify": "5.3.3",
    "fastify-cli": "7.4.0",
    "fastify-plugin": "5.0.1",
    "fastify-tsconfig": "3.0.0",
    "pg": "8.12.0",
    "stripe": "^19.0.0",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "@tapjs/test": "4.0.1",
    "@types/busboy": "1.5.4",
    "@types/dotenv": "8.2.3",
    "@types/node": "22.15.19",
    "@types/pg": "8.11.10",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/tap": "18.0.0",
    "consola": "^3.4.2",
    "cpy-cli": "6.0.0",
    "cross-env": "10.0.0",
    "drizzle-kit": "0.30.0",
    "fast-json-stringify": "6.0.1",
    "husky": "9.1.7",
    "oxlint": "1.0.0",
    "prettier": "3.4.2",
    "sort-package-json": "3.2.1",
    "tap": "21.1.0",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3",
    "zod": "3.24.1"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "legacyOutput": true,
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}

{
  "name": "blawby-backend",
  "version": "0.1.0",
  "license": "MIT",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "pnpm run schemas:sync && tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "dev": "pnpm run schemas:sync && tsx src/server.ts",
    "dev:watch": "pnpm run schemas:sync && tsx --watch src/server.ts",
    "dev:full": "concurrently \"ENABLE_QUEUE=true pnpm run dev\" \"pnpm run worker:dev\" --names \"API,WORKER\" --prefix-colors \"blue,green\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "schemas:sync": "tsx scripts/sync-schemas.ts",
    "schemas:watch": "tsx --watch scripts/sync-schemas.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap test/**/*.test.ts",
    "typecheck": "tsc -noEmit",
    "worker": "tsx src/workers/webhook.worker.ts",
    "worker:dev": "tsx --watch src/workers/webhook.worker.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@fastify/cors": "11.1.0",
    "@fastify/etag": "6.1.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/multipart": "9.2.1",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/sensible": "6.0.3",
    "better-auth": "1.3.27",
    "bullmq": "^5.61.0",
    "close-with-grace": "2.2.0",
    "drizzle-orm": "0.36.4",
    "drizzle-zod": "0.5.1",
    "es-toolkit": "^1.40.0",
    "fastify": "5.6.1",
    "fastify-plugin": "5.0.1",
    "fastify-tsconfig": "3.0.0",
    "ioredis": "^5.8.1",
    "pg": "8.12.0",
    "pino-pretty": "13.1.1",
    "stripe": "^19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "@tapjs/test": "4.0.1",
    "@types/busboy": "1.5.4",
    "@types/node": "24.7.2",
    "@types/pg": "8.15.5",
    "concurrently": "^9.2.1",
    "cross-env": "10.0.0",
    "drizzle-kit": "0.30.0",
    "husky": "9.1.7",
    "oxlint": "1.23.0",
    "prettier": "3.6.2",
    "tap": "21.1.0",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "legacyOutput": true,
    "target": "es2018"
  }
}

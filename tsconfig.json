{
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "extends": "./node_modules/fastify-tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@modules/*": ["./src/modules/*"],
      "@/database": ["./src/database"],
      "@/database/*": ["./src/database/*"],
      "@/schema": ["./src/schema"],
      "@/schema/*": ["./src/schema/*"],
      "@/auth": ["./src/auth"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/plugins/*": ["./src/plugins/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
